$(document).ready(function() {
  
  $('#new_comment').on('submit', function(e) {
      e.preventDefault();
      $.ajax({
        url: this.action,
        method: 'post',
        data: $(this).serialize(),
        dataType: 'json',
        success: function(response) {
          $('#comments_list').prepend(response.body)
        },
        error: function(response) {
        }
      });
  });
});
